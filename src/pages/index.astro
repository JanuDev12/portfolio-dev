<Layout>
	
	<main class="mx-auto max-w-4xl h-full py-10 px-8 flex flex-col gap-4">
	  <section class=" h-60">
		<article class="max-w-[65ch] py-4">
			<p class="leading-loose">
			I'm <strong>Juan</strong>, a web developer with +1 years of experience. I'm passionate about databases, UI/UX design, and building open-source software.
		   </p>
		</article>
		
		
      </section>
	  <div class="flex flex-col w-full h-full gap-4">
		 <section class="flex-1">
		   <h2 class="text-2xl font-semibold mb-4">Projects</h2>
		   <div class="relative grid grid-cols-2 gap-4">
			  <article class="border rounded-md py-4 px-3 shadow-sm border-neutral-600">
				<span>Project #1</span> 
				<p class="">
				

					
				</p>
			  </article>
			  <article class="border rounded-md py-4 px-3 shadow-sm border-neutral-600">
				Project #2
			  </article>
		   </div>
	     </section>
	   <section class="flex-1 h-full bg-green-200">
		Experience
	  </section>
	  </div>
     
		
	</main>
	
	
</Layout>
